<?xml version="1.0"?>
<robot name="panda_sim" xmlns:xacro="http://www.ros.org/wiki/xacro">
  <xacro:arg name="name" default="panda"/>
  <xacro:arg name="prefix" default=""/>
  <xacro:arg name="controllers_file" default=""/>

  <xacro:property name="name" value="$(arg name)"/>
  <xacro:property name="prefix" value="$(arg prefix)"/>

  <material name="panda_white">
    <color rgba="0.95 0.95 0.95 1.0"/>
  </material>

  <link name="${prefix}panda_link0">
