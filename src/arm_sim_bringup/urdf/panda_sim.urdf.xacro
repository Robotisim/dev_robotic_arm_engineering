    <child link="${prefix}panda_link7"/>
    <axis xyz="0 0 1"/>
    <limit effort="12" lower="-2.9671" upper="2.9671" velocity="2.871"/>
    <dynamics damping="0.20" friction="0.015"/>
  </joint>

  <link name="${prefix}panda_link8">
    <visual>
      <origin xyz="0 0 0.0535" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.03" length="0.107"/>
      </geometry>
      <material name="panda_white"/>
    </visual>
    <collision>
      <origin xyz="0 0 0.0535" rpy="0 0 0"/>
