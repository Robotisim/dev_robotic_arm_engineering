      </geometry>
      <material name="panda_white"/>
    </visual>
    <collision>
      <geometry>
        <mesh filename="package://moveit_resources_panda_description/meshes/collision/link0.stl"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="-0.041018 -0.00014 0.049974" rpy="0 0 0"/>
      <mass value="0.629769"/>
      <inertia ixx="0.00315" ixy="0.00000082904" ixz="0.00015" iyy="0.00388" iyz="0.0000082299" izz="0.004285"/>
    </inertial>
  </link>

