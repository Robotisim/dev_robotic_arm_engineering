    <parent link="${prefix}panda_link7"/>
    <child link="${prefix}panda_link8"/>
  </joint>

  <link name="${prefix}panda_tool0"/>
  <joint name="${prefix}panda_tool0_joint" type="fixed">
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <parent link="${prefix}panda_link8"/>
    <child link="${prefix}panda_tool0"/>
  </joint>

  <ros2_control name="${name}_system" type="system">
    <hardware>
      <plugin>gz_ros2_control/GazeboSimSystem</plugin>
    </hardware>

    <joint name="${prefix}panda_joint1">
      <command_interface name="position"/>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>
    <joint name="${prefix}panda_joint2">
      <command_interface name="position"/>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>
    <joint name="${prefix}panda_joint3">
