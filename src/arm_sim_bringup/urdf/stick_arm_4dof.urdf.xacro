<?xml version="1.0"?>
<robot name="stick_arm_4dof" xmlns:xacro="http://www.ros.org/wiki/xacro">
  <xacro:arg name="name" default="stick_arm"/>
  <xacro:arg name="prefix" default=""/>
  <xacro:arg name="controllers_file" default=""/>

  <xacro:property name="name" value="$(arg name)"/>
  <xacro:property name="prefix" value="$(arg prefix)"/>
  <xacro:property name="l1" value="0.35"/>
  <xacro:property name="l2" value="0.30"/>
  <xacro:property name="l3" value="0.25"/>
  <xacro:property name="l4" value="0.18"/>

  <material name="steel_gray">
    <color rgba="0.65 0.65 0.7 1.0"/>
  </material>
  <material name="orange_accent">
    <color rgba="0.95 0.45 0.15 1.0"/>
  </material>

  <link name="${prefix}base_link">
    <visual>
      <geometry>
        <box size="0.18 0.18 0.12"/>
      </geometry>
      <material name="steel_gray"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.18 0.18 0.12"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="2.0"/>
      <inertia ixx="0.012" ixy="0.0" ixz="0.0" iyy="0.012" iyz="0.0" izz="0.012"/>
    </inertial>
  </link>

  <link name="${prefix}link1">
    <visual>
      <origin xyz="0 0 ${l1 / 2.0}" rpy="0 0 0"/>
      <geometry>
        <cylinder length="${l1}" radius="0.03"/>
      </geometry>
      <material name="orange_accent"/>
    </visual>
    <collision>
      <origin xyz="0 0 ${l1 / 2.0}" rpy="0 0 0"/>
      <geometry>
        <cylinder length="${l1}" radius="0.03"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 ${l1 / 2.0}" rpy="0 0 0"/>
      <mass value="1.2"/>
      <inertia ixx="0.013" ixy="0.0" ixz="0.0" iyy="0.013" iyz="0.0" izz="0.0006"/>
    </inertial>
  </link>

  <joint name="${prefix}joint1" type="revolute">
    <origin xyz="0 0 0.06" rpy="0 0 0"/>
    <parent link="${prefix}base_link"/>
    <child link="${prefix}link1"/>
    <axis xyz="0 0 1"/>
    <limit lower="-3.14159" upper="3.14159" effort="30.0" velocity="2.0"/>
    <dynamics damping="0.15" friction="0.05"/>
  </joint>

  <link name="${prefix}link2">
    <visual>
      <origin xyz="${l2 / 2.0} 0 0" rpy="0 1.57079632679 0"/>
      <geometry>
        <cylinder length="${l2}" radius="0.028"/>
      </geometry>
      <material name="steel_gray"/>
    </visual>
    <collision>
      <origin xyz="${l2 / 2.0} 0 0" rpy="0 1.57079632679 0"/>
      <geometry>
        <cylinder length="${l2}" radius="0.028"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="${l2 / 2.0} 0 0" rpy="0 0 0"/>
      <mass value="0.9"/>
      <inertia ixx="0.0004" ixy="0.0" ixz="0.0" iyy="0.0068" iyz="0.0" izz="0.0068"/>
    </inertial>
  </link>

  <joint name="${prefix}joint2" type="revolute">
    <origin xyz="0 0 ${l1}" rpy="0 0 0"/>
    <parent link="${prefix}link1"/>
    <child link="${prefix}link2"/>
    <axis xyz="0 1 0"/>
    <limit lower="-2.2" upper="2.2" effort="25.0" velocity="2.0"/>
    <dynamics damping="0.12" friction="0.03"/>
  </joint>

  <link name="${prefix}link3">
    <visual>
      <origin xyz="${l3 / 2.0} 0 0" rpy="0 1.57079632679 0"/>
      <geometry>
        <cylinder length="${l3}" radius="0.024"/>
      </geometry>
      <material name="orange_accent"/>
    </visual>
    <collision>
      <origin xyz="${l3 / 2.0} 0 0" rpy="0 1.57079632679 0"/>
      <geometry>
        <cylinder length="${l3}" radius="0.024"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="${l3 / 2.0} 0 0" rpy="0 0 0"/>
      <mass value="0.7"/>
      <inertia ixx="0.00025" ixy="0.0" ixz="0.0" iyy="0.0037" iyz="0.0" izz="0.0037"/>
    </inertial>
  </link>

  <joint name="${prefix}joint3" type="revolute">
    <origin xyz="${l2} 0 0" rpy="0 0 0"/>
    <parent link="${prefix}link2"/>
    <child link="${prefix}link3"/>
    <axis xyz="0 1 0"/>
    <limit lower="-2.2" upper="2.2" effort="20.0" velocity="2.2"/>
    <dynamics damping="0.10" friction="0.03"/>
  </joint>

  <link name="${prefix}link4">
    <visual>
      <origin xyz="${l4 / 2.0} 0 0" rpy="0 1.57079632679 0"/>
      <geometry>
        <cylinder length="${l4}" radius="0.02"/>
      </geometry>
      <material name="steel_gray"/>
    </visual>
    <collision>
      <origin xyz="${l4 / 2.0} 0 0" rpy="0 1.57079632679 0"/>
      <geometry>
        <cylinder length="${l4}" radius="0.02"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="${l4 / 2.0} 0 0" rpy="0 0 0"/>
      <mass value="0.5"/>
      <inertia ixx="0.00012" ixy="0.0" ixz="0.0" iyy="0.0014" iyz="0.0" izz="0.0014"/>
    </inertial>
  </link>

  <joint name="${prefix}joint4" type="revolute">
    <origin xyz="${l3} 0 0" rpy="0 0 0"/>
    <parent link="${prefix}link3"/>
    <child link="${prefix}link4"/>
    <axis xyz="0 1 0"/>
    <limit lower="-2.5" upper="2.5" effort="15.0" velocity="2.5"/>
    <dynamics damping="0.08" friction="0.02"/>
  </joint>

  <link name="${prefix}tool0">
    <visual>
      <origin xyz="0.03 0 0" rpy="0 0 0"/>
      <geometry>
        <sphere radius="0.03"/>
      </geometry>
      <material name="orange_accent"/>
    </visual>
    <collision>
      <origin xyz="0.03 0 0" rpy="0 0 0"/>
      <geometry>
        <sphere radius="0.03"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0.03 0 0" rpy="0 0 0"/>
      <mass value="0.1"/>
      <inertia ixx="0.00003" ixy="0.0" ixz="0.0" iyy="0.00003" iyz="0.0" izz="0.00003"/>
    </inertial>
  </link>

  <joint name="${prefix}tool_joint" type="fixed">
    <origin xyz="${l4} 0 0" rpy="0 0 0"/>
    <parent link="${prefix}link4"/>
    <child link="${prefix}tool0"/>
  </joint>

  <ros2_control name="${name}_system" type="system">
    <hardware>
      <plugin>gz_ros2_control/GazeboSimSystem</plugin>
    </hardware>

    <joint name="${prefix}joint1">
      <command_interface name="position"/>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>
    <joint name="${prefix}joint2">
      <command_interface name="position"/>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>
    <joint name="${prefix}joint3">
      <command_interface name="position"/>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>
    <joint name="${prefix}joint4">
      <command_interface name="position"/>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>
  </ros2_control>

  <transmission name="${prefix}joint1_transmission">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="${prefix}joint1">
      <hardwareInterface>hardware_interface/PositionJointInterface</hardwareInterface>
    </joint>
    <actuator name="${prefix}joint1_motor">
      <hardwareInterface>hardware_interface/PositionJointInterface</hardwareInterface>
      <mechanicalReduction>1.0</mechanicalReduction>
    </actuator>
  </transmission>

  <transmission name="${prefix}joint2_transmission">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="${prefix}joint2">
      <hardwareInterface>hardware_interface/PositionJointInterface</hardwareInterface>
    </joint>
    <actuator name="${prefix}joint2_motor">
      <hardwareInterface>hardware_interface/PositionJointInterface</hardwareInterface>
      <mechanicalReduction>1.0</mechanicalReduction>
    </actuator>
  </transmission>

  <transmission name="${prefix}joint3_transmission">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="${prefix}joint3">
      <hardwareInterface>hardware_interface/PositionJointInterface</hardwareInterface>
    </joint>
    <actuator name="${prefix}joint3_motor">
      <hardwareInterface>hardware_interface/PositionJointInterface</hardwareInterface>
      <mechanicalReduction>1.0</mechanicalReduction>
    </actuator>
  </transmission>

  <transmission name="${prefix}joint4_transmission">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="${prefix}joint4">
      <hardwareInterface>hardware_interface/PositionJointInterface</hardwareInterface>
    </joint>
    <actuator name="${prefix}joint4_motor">
      <hardwareInterface>hardware_interface/PositionJointInterface</hardwareInterface>
      <mechanicalReduction>1.0</mechanicalReduction>
    </actuator>
  </transmission>

  <gazebo>
    <plugin filename="libgz_ros2_control-system.so" name="gz_ros2_control::GazeboSimROS2ControlPlugin">
      <parameters>$(arg controllers_file)</parameters>
    </plugin>
  </gazebo>
</robot>
